{
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "rules": {
    "array-bracket-spacing": [
      2,
      "never"
    ],
    "block-scoped-var": 2,
    "computed-property-spacing": [
      2,
      "never"
    ],
    "eol-last": 2,
    "eqeqeq": [
      2,
      "smart"
    ],
    "max-depth": [
      1,
      4
    ],
    "max-len": [
      1,
      260
    ],
    "max-statements": [
      1,
      100
    ],
    "new-cap": 1,
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "no-unused-vars": 1,
    "no-use-before-define": [
      2,
      "nofunc"
    ],
    "object-curly-spacing": [
      2,
      "always"
    ],
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "keyword-spacing": [
      2,
      {
        "before": true,
        "after": true
      }
    ],
    "space-unary-ops": 2
  }
}